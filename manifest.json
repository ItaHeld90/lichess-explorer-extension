{
    "manifest_version": 2,
    "name": "Lichess-Explorer",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": ["https://lichess.org/*"],
            "js": ["src/content-script.js"]
        },
        {
            "matches": ["https://lichess.org/analysis*"],
            "js": ["src/piece-count.js"]
        }
    ],
    "web_accessible_resources": ["src/*", "assets/*.png"]
}
